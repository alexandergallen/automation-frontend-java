#!/usr/bin/env groovy

pipeline {

    agent {
        docker {
            image 'alexgallen/jdk8-chromedriver'
            args '-u root'
        }
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'chmod +x gradlew'
                sh './gradlew build'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                sh './gradlew cucumber'
            }
        }
    }
}